<style>
    .browse-header {
        background: linear-gradient(135deg, #1b6ec2 0%, #004a7d 100%);
        color: white;
        padding: 40px 20px;
        margin-bottom: 40px;
    }

    .browse-header h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .browse-header p {
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .search-filter {
        display: grid;
        grid-template-columns: 1fr 200px;
        gap: 15px;
        margin-top: 20px;
    }

    .all-courses {
        margin: 40px 0;
    }

    .courses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 25px;
    }

    .course-card-browse {
        background: white;
        border-radius: 8px;
        padding: 25px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .course-card-browse:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .course-card-browse h3 {
        font-weight: 700;
        margin-bottom: 10px;
        color: #333;
    }

    .course-card-browse .category {
        color: #1b6ec2;
        font-weight: 600;
        font-size: 0.85rem;
        margin-bottom: 10px;
    }

    .course-card-browse .description {
        color: #666;
        margin-bottom: 15px;
        flex-grow: 1;
        line-height: 1.5;
    }

    .course-stats {
        display: flex;
        gap: 15px;
        margin-bottom: 15px;
        font-size: 0.9rem;
        color: #666;
        flex-wrap: wrap;
    }

    .course-stats span {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .course-card-browse .btn {
        align-self: flex-start;
    }
</style>
