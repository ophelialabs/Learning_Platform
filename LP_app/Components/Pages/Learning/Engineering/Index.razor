@page "/engineering"

<PageTitle>Engineering - Learning Platform</PageTitle>

<CourseHeader 
    CourseName="General Engineering"
    Description="Comprehensive introduction to engineering disciplines including mechanical, civil, electrical, and more."
    Duration="8 months"
    LessonCount="40"
    HasCertificate="true" />

<div class="learning-cta">
    <a href="/engineering/learning" class="btn btn-primary btn-lg">
        <i class="bi bi-play-circle-fill"></i> Start Interactive Learning
    </a>
</div>

<div class="container">
    <section class="course-overview">
        <h2>Course Modules</h2>
        <div class="overview-grid">
            <div class="overview-card">
                <div class="card-number">1</div>
                <h3>Mechanical Engineering</h3>
                <p>Mechanics, thermodynamics, machine design, and manufacturing processes.</p>
                <div class="card-meta">9 lessons • 7 hours</div>
                <a href="/engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">2</div>
                <h3>Electrical Engineering</h3>
                <p>Circuits, electronics, power systems, and control systems.</p>
                <div class="card-meta">10 lessons • 8 hours</div>
                <a href="/engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">3</div>
                <h3>Civil Engineering</h3>
                <p>Structural design, materials, and infrastructure projects.</p>
                <div class="card-meta">8 lessons • 6.5 hours</div>
                <a href="/engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
        </div>
    </section>

    <section class="tools-section">
        <h2>Tools You'll Master</h2>
        <div class="tools-grid">
            @foreach (var tool in Tools)
            {
                <div class="tool-badge">@tool</div>
            }
        </div>
    </section>

    <section class="requirements-section">
        <h2>What You'll Learn</h2>
        <div class="requirements-grid">
            <div class="requirement">
                <h4>✓ Mechanical Principles</h4>
                <p>Forces, motion, energy, and thermal systems.</p>
            </div>
            <div class="requirement">
                <h4>✓ Electrical Systems</h4>
                <p>Circuits, electronics, power systems, and automation.</p>
            </div>
            <div class="requirement">
                <h4>✓ Structural Design</h4>
                <p>Building design, materials, and structural analysis.</p>
            </div>
            <div class="requirement">
                <h4>✓ CAD Modeling</h4>
                <p>3D design, drafting, and visualization techniques.</p>
            </div>
            <div class="requirement">
                <h4>✓ Project Management</h4>
                <p>Planning, execution, and engineering project delivery.</p>
            </div>
            <div class="requirement">
                <h4>✓ Design Projects</h4>
                <p>Apply knowledge to multidisciplinary engineering projects.</p>
            </div>
        </div>
    </section>

    <section class="research-section">
        <h2>Research & Resources</h2>
        <div class="resources-grid">
            <div class="resource-item">
                <h3>Professional Societies</h3>
                <ul>
                    <li><a href="https://www.asme.org/" target="_blank">American Society of Mechanical Engineers (ASME)</a></li>
                    <li>Leading professional organization for engineers</li>
                    <li>Publications, standards, and technical conferences</li>
                </ul>
            </div>
            <div class="resource-item">
                <h3>Engineering Disciplines</h3>
                <ul>
                    <li>Mechanical design and manufacturing</li>
                    <li>Thermodynamics and heat transfer</li>
                    <li>Structural analysis and mechanics</li>
                    <li>Automation and control systems</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="applications-section">
        <h2>Real-World Applications</h2>
        <div class="applications-grid">
            <div class="application-card">
                <h3>Product Design</h3>
                <p>Design consumer products, machinery, and industrial equipment using CAD and simulation tools.</p>
            </div>
            <div class="application-card">
                <h3>Manufacturing Systems</h3>
                <p>Optimize production processes and develop automation for efficient manufacturing.</p>
            </div>
            <div class="application-card">
                <h3>Infrastructure Projects</h3>
                <p>Design and oversee construction of bridges, buildings, and civil infrastructure.</p>
            </div>
            <div class="application-card">
                <h3>Energy Systems</h3>
                <p>Develop power generation, HVAC, and renewable energy systems.</p>
            </div>
            <div class="application-card">
                <h3>Transportation</h3>
                <p>Engineer vehicles, transportation systems, and logistics solutions.</p>
            </div>
            <div class="application-card">
                <h3>Environmental Solutions</h3>
                <p>Design systems for water treatment, waste management, and pollution control.</p>
            </div>
        </div>
    </section>
</div>

@code {
    private LessonsList? lessonsComponent;
    private QuizzesList? quizzesComponent;

    private List<string> Tools = new()
    {
        "AutoCAD", "SOLIDWORKS", "MATLAB", "Python", "ANSYS", "SAP2000"
    };

    protected override void OnInitialized() {
        if (lessonsComponent != null) lessonsComponent.Lessons = new() { new() { Title = "Engineering Basics", Description = "Overview", Duration = "2 hours", Link = "/lesson/eng-intro", Topics = new() { "Fundamentals" } } };
        if (quizzesComponent != null) quizzesComponent.Quizzes = new() { new() { Title = "Engineering Quiz", Description = "Test", Questions = 15, TimeLimit = 25, Link = "/quiz/eng-101" } };
    }
}

