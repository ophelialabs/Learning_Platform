@page "/biomedical-engineering"

<PageTitle>BioMedical Engineering - Learning Platform</PageTitle>

<CourseHeader 
    CourseName="BioMedical Engineering"
    Description="Master the intersection of engineering and medicine. Learn medical device design, biomechanics, and biomedical signal processing."
    Duration="6 months"
    LessonCount="28"
    HasCertificate="true" />

<div class="learning-cta">
    <a href="/biomedical-engineering/learning" class="btn btn-primary btn-lg">
        <i class="bi bi-play-circle-fill"></i> Start Interactive Learning
    </a>
</div>

<div class="container">
    <section class="course-overview">
        <h2>Course Modules</h2>
        <div class="overview-grid">
            <div class="overview-card">
                <div class="card-number">1</div>
                <h3>Biomedical Fundamentals</h3>
                <p>Core concepts in biomedical engineering, human anatomy, and physiology for engineers.</p>
                <div class="card-meta">7 lessons • 5 hours</div>
                <a href="/biomedical-engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">2</div>
                <h3>Medical Devices</h3>
                <p>Design and develop life-saving medical devices and diagnostic equipment.</p>
                <div class="card-meta">8 lessons • 6 hours</div>
                <a href="/biomedical-engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">3</div>
                <h3>Biomechanics</h3>
                <p>Understand mechanical behavior of biological systems and implant design.</p>
                <div class="card-meta">6 lessons • 5 hours</div>
                <a href="/biomedical-engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
        </div>
    </section>

    <section class="tools-section">
        <h2>Tools You'll Master</h2>
        <div class="tools-grid">
            @foreach (var tool in Tools)
            {
                <div class="tool-badge">@tool</div>
            }
        </div>
    </section>

    <section class="requirements-section">
        <h2>What You'll Learn</h2>
        <div class="requirements-grid">
            <div class="requirement">
                <h4>✓ Biomedical Fundamentals</h4>
                <p>Anatomy, physiology, and biological systems for engineering applications.</p>
            </div>
            <div class="requirement">
                <h4>✓ Medical Device Design</h4>
                <p>Design process, regulatory compliance, and device development lifecycle.</p>
            </div>
            <div class="requirement">
                <h4>✓ Biomechanics</h4>
                <p>Mechanics of biological systems, joint analysis, and implant design.</p>
            </div>
            <div class="requirement">
                <h4>✓ Biomedical Signals</h4>
                <p>ECG, EMG, EEG signal processing and biomedical instrumentation.</p>
            </div>
            <div class="requirement">
                <h4>✓ Materials Science</h4>
                <p>Biocompatible materials selection and tissue engineering.</p>
            </div>
            <div class="requirement">
                <h4>✓ Capstone Project</h4>
                <p>Design a medical device from concept to prototype.</p>
            </div>
        </div>
    </section>

    <section class="research-section">
        <h2>Research & Resources</h2>
        <div class="resources-grid">
            <div class="resource-item">
                <h3>Professional Organizations</h3>
                <ul>
                    <li><a href="https://www.bmes.org/" target="_blank">Biomedical Engineering Society (BMES)</a></li>
                    <li>Advancing healthcare through biomedical engineering</li>
                    <li>Conferences, mentoring, and professional development</li>
                </ul>
            </div>
            <div class="resource-item">
                <h3>Research Focus Areas</h3>
                <ul>
                    <li>Medical device design and manufacturing</li>
                    <li>Biomaterials and tissue engineering</li>
                    <li>Diagnostic imaging and sensing</li>
                    <li>Rehabilitative and assistive technology</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="applications-section">
        <h2>Real-World Applications</h2>
        <div class="applications-grid">
            <div class="application-card">
                <h3>Medical Devices</h3>
                <p>Design and develop pacemakers, prosthetics, implants, and diagnostic equipment.</p>
            </div>
            <div class="application-card">
                <h3>Tissue Engineering</h3>
                <p>Create artificial tissues and organs using biomaterials and cell cultivation.</p>
            </div>
            <div class="application-card">
                <h3>Drug Delivery Systems</h3>
                <p>Engineer targeted delivery mechanisms for pharmaceuticals to improve treatment efficacy.</p>
            </div>
            <div class="application-card">
                <h3>Rehabilitation Technology</h3>
                <p>Develop assistive devices and rehabilitation systems for patients with disabilities.</p>
            </div>
            <div class="application-card">
                <h3>Diagnostic Imaging</h3>
                <p>Create MRI, CT, ultrasound, and other imaging systems for medical diagnostics.</p>
            </div>
            <div class="application-card">
                <h3>Surgical Instruments</h3>
                <p>Design minimally invasive surgical tools and robotic surgery systems.</p>
            </div>
        </div>
    </section>
</div>

