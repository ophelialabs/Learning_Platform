@page "/nuclear-engineering"

<PageTitle>Nuclear Engineering - Learning Platform</PageTitle>

<CourseHeader 
    CourseName="Nuclear Engineering"
    Description="Explore nuclear energy, radiation, reactor design, and advanced nuclear technologies."
    Duration="7 months"
    LessonCount="35"
    HasCertificate="true" />

<div class="learning-cta">
    <a href="/nuclear-engineering/learning" class="btn btn-primary btn-lg">
        <i class="bi bi-play-circle-fill"></i> Start Interactive Learning
    </a>
</div>

<div class="container">
    <section class="course-overview">
        <h2>Course Modules</h2>
        <div class="overview-grid">
            <div class="overview-card">
                <div class="card-number">1</div>
                <h3>Nuclear Physics</h3>
                <p>Atomic structure, nuclear reactions, and radioactivity.</p>
                <div class="card-meta">8 lessons • 6 hours</div>
                <a href="/nuclear-engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">2</div>
                <h3>Reactor Design</h3>
                <p>Fission reactor design, operation, and safety systems.</p>
                <div class="card-meta">9 lessons • 7 hours</div>
                <a href="/nuclear-engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">3</div>
                <h3>Radiation Protection</h3>
                <p>Health physics, shielding, and radiation safety.</p>
                <div class="card-meta">7 lessons • 5.5 hours</div>
                <a href="/nuclear-engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
        </div>
    </section>

    <section class="tools-section">
        <h2>Tools You'll Master</h2>
        <div class="tools-grid">
            @foreach (var tool in Tools)
            {
                <div class="tool-badge">@tool</div>
            }
        </div>
    </section>

    <section class="requirements-section">
        <h2>What You'll Learn</h2>
        <div class="requirements-grid">
            <div class="requirement">
                <h4>✓ Nuclear Physics</h4>
                <p>Atomic structure, radioactive decay, and nuclear reactions.</p>
            </div>
            <div class="requirement">
                <h4>✓ Reactor Physics</h4>
                <p>Chain reactions, criticality, and neutron transport.</p>
            </div>
            <div class="requirement">
                <h4>✓ Reactor Engineering</h4>
                <p>Core design, thermal hydraulics, and operations.</p>
            </div>
            <div class="requirement">
                <h4>✓ Radiation Safety</h4>
                <p>Dose calculations, shielding design, and protection.</p>
            </div>
            <div class="requirement">
                <h4>✓ Nuclear Fuel Cycle</h4>
                <p>Mining, enrichment, reprocessing, and waste management.</p>
            </div>
            <div class="requirement">
                <h4>✓ Capstone Project</h4>
                <p>Design a nuclear facility or analyze radiation scenario.</p>
            </div>
        </div>
    </section>

    <section class="research-section">
        <h2>Research & Resources</h2>
        <div class="resources-grid">
            <div class="resource-item">
                <h3>Key Organizations</h3>
                <ul>
                    <li><a href="https://www.ans.org/" target="_blank">American Nuclear Society (ANS)</a></li>
                    <li>Professional association for nuclear engineers and scientists</li>
                    <li>Standards, conferences, and technical information</li>
                </ul>
            </div>
            <div class="resource-item">
                <h3>Research Focus</h3>
                <ul>
                    <li>Reactor design and safety systems</li>
                    <li>Nuclear materials and fuel cycles</li>
                    <li>Radiation protection and shielding</li>
                    <li>Advanced reactor concepts and fusion energy</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="applications-section">
        <h2>Real-World Applications</h2>
        <div class="applications-grid">
            <div class="application-card">
                <h3>Power Generation</h3>
                <p>Design and operate nuclear power plants for safe and efficient electricity production.</p>
            </div>
            <div class="application-card">
                <h3>Medical Applications</h3>
                <p>Develop radiotherapy systems and diagnostic imaging equipment for healthcare.</p>
            </div>
            <div class="application-card">
                <h3>Nuclear Safety</h3>
                <p>Engineer safety systems and protocols for nuclear facility operations.</p>
            </div>
            <div class="application-card">
                <h3>Waste Management</h3>
                <p>Design solutions for safe storage and disposal of radioactive materials.</p>
            </div>
            <div class="application-card">
                <h3>Industrial Applications</h3>
                <p>Use radiation for sterilization, material analysis, and industrial processes.</p>
            </div>
            <div class="application-card">
                <h3>Fusion Research</h3>
                <p>Advance fusion technology as a clean, sustainable energy source.</p>
            </div>
        </div>
    </section>
</div>

@code {
    private LessonsList? lessonsComponent;
    private QuizzesList? quizzesComponent;

    private List<string> Tools = new()
    {
        "MCNP", "SCALE", "Serpent", "MATLAB", "Python", "COMSOL"
    };

    protected override void OnInitialized() {
        if (lessonsComponent != null) lessonsComponent.Lessons = new() { new() { Title = "Nuclear Basics", Description = "Overview", Duration = "2 hours", Link = "/lesson/nuclear-intro", Topics = new() { "Physics" } } };
        if (quizzesComponent != null) quizzesComponent.Quizzes = new() { new() { Title = "Nuclear Quiz", Description = "Test", Questions = 15, TimeLimit = 25, Link = "/quiz/nuclear-101" } };
    }
}

