@page "/geospatial"

<PageTitle>Geospatial Analytics - Learning Platform</PageTitle>

[NC State](https://cnr.ncsu.edu/geospatial/)

<CourseHeader 
    CourseName="Geospatial Analytics"
    Description="Master geographic information systems (GIS), remote sensing, and location-based data analysis."
    Duration="6 months"
    LessonCount="30"
    HasCertificate="true" />

<div class="learning-cta">
    <a href="/geospatial/learning" class="btn btn-primary btn-lg">
        <i class="bi bi-play-circle-fill"></i> Start Interactive Learning
    </a>
</div>

<div class="container">
    <section class="course-overview">
        <h2>Course Modules</h2>
        <div class="overview-grid">
            <div class="overview-card">
                <div class="card-number">1</div>
                <h3>GIS Fundamentals</h3>
                <p>Geographic information systems, mapping, and spatial analysis.</p>
                <div class="card-meta">7 lessons • 5.5 hours</div>
                <a href="/geospatial/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">2</div>
                <h3>Remote Sensing</h3>
                <p>Satellite imagery, image processing, and earth observation.</p>
                <div class="card-meta">8 lessons • 6 hours</div>
                <a href="/geospatial/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">3</div>
                <h3>Spatial Analysis</h3>
                <p>Advanced analytics and visualization of geographic data.</p>
                <div class="card-meta">6 lessons • 5 hours</div>
                <a href="/geospatial/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
        </div>
    </section>

    <section class="tools-section">
        <h2>Tools You'll Master</h2>
        <div class="tools-grid">
            @foreach (var tool in Tools)
            {
                <div class="tool-badge">@tool</div>
            }
        </div>
    </section>

    <section class="requirements-section">
        <h2>What You'll Learn</h2>
        <div class="requirements-grid">
            <div class="requirement">
                <h4>✓ GIS Basics</h4>
                <p>Mapping, layers, geodatabases, and spatial data structures.</p>
            </div>
            <div class="requirement">
                <h4>✓ Remote Sensing</h4>
                <p>Satellite data, image classification, and change detection.</p>
            </div>
            <div class="requirement">
                <h4>✓ Spatial Analysis</h4>
                <p>Interpolation, buffering, overlay analysis, and modeling.</p>
            </div>
            <div class="requirement">
                <h4>✓ Geodesy</h4>
                <p>Coordinate systems, projections, and datum transformations.</p>
            </div>
            <div class="requirement">
                <h4>✓ Data Visualization</h4>
                <p>Cartography, map design, and interactive mapping.</p>
            </div>
            <div class="requirement">
                <h4>✓ Real-World Projects</h4>
                <p>Analyze environmental and urban planning challenges.</p>
            </div>
        </div>
    </section>

    <section class="research-section">
        <h2>Research & Resources</h2>
        <div class="resources-grid">
            <div class="resource-item">
                <h3>Professional Organizations</h3>
                <ul>
                    <li><a href="https://www.ucgis.org/" target="_blank">University Consortium for Geographic Information Science (UCGIS)</a></li>
                    <li>Advancing geospatial science and technology</li>
                    <li>Research initiatives and educational opportunities</li>
                </ul>
            </div>
            <div class="resource-item">
                <h3>Key Technologies</h3>
                <ul>
                    <li>Geographic Information Systems (GIS)</li>
                    <li>Remote sensing and satellite imagery</li>
                    <li>GPS and positioning systems</li>
                    <li>Spatial analysis and cartography</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="applications-section">
        <h2>Real-World Applications</h2>
        <div class="applications-grid">
            <div class="application-card">
                <h3>Urban Planning</h3>
                <p>Analyze land use, infrastructure, and development patterns for sustainable city planning.</p>
            </div>
            <div class="application-card">
                <h3>Environmental Monitoring</h3>
                <p>Track land cover changes, climate impacts, and ecosystem health using satellite data.</p>
            </div>
            <div class="application-card">
                <h3>Natural Resource Management</h3>
                <p>Manage forests, water, and mineral resources using spatial analysis and mapping.</p>
            </div>
            <div class="application-card">
                <h3>Disaster Response</h3>
                <p>Use GIS for emergency management, risk assessment, and post-disaster analysis.</p>
            </div>
            <div class="application-card">
                <h3>Agriculture Analytics</h3>
                <p>Optimize farming practices using precision agriculture and crop monitoring.</p>
            </div>
            <div class="application-card">
                <h3>Infrastructure Planning</h3>
                <p>Design transportation networks, utilities, and telecommunications infrastructure.</p>
            </div>
        </div>
    </section>
</div>

@code {
    private LessonsList? lessonsComponent;
    private QuizzesList? quizzesComponent;

    private List<string> Tools = new()
    {
        "ArcGIS", "QGIS", "GDAL", "Python", "Remote Sensing Tools", "Leaflet"
    };

    protected override void OnInitialized() {
        if (lessonsComponent != null) lessonsComponent.Lessons = new() { new() { Title = "GIS Basics", Description = "Overview", Duration = "2 hours", Link = "/lesson/gis-intro", Topics = new() { "Mapping" } } };
        if (quizzesComponent != null) quizzesComponent.Quizzes = new() { new() { Title = "GIS Quiz", Description = "Test", Questions = 15, TimeLimit = 25, Link = "/quiz/gis-101" } };
    }
}

