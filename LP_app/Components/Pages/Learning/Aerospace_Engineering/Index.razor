@page "/aerospace-engineering"

<PageTitle>Aerospace Engineering - Learning Platform</PageTitle>

<CourseHeader 
    CourseName="Aerospace Engineering"
    Description="Explore advanced concepts in aerospace engineering including aerodynamics, propulsion systems, and aircraft design."
    Duration="6 months"
    LessonCount="32"
    HasCertificate="true" />

<div class="learning-cta">
    <a href="/aerospace-engineering/learning" class="btn btn-primary btn-lg">
        <i class="bi bi-play-circle-fill"></i> Start Interactive Learning
    </a>
</div>

<div class="container">
    <section class="course-overview">
        <h2>Course Modules</h2>
        <div class="overview-grid">
            <div class="overview-card">
                <div class="card-number">1</div>
                <h3>Fundamentals of Aerospace</h3>
                <p>Introduction to aerospace engineering principles, aerodynamics, and aircraft systems.</p>
                <div class="card-meta">8 lessons • 6 hours</div>
                <a href="/aerospace-engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">2</div>
                <h3>Propulsion Systems</h3>
                <p>Deep dive into jet engines, rockets, and alternative propulsion technologies.</p>
                <div class="card-meta">7 lessons • 5.5 hours</div>
                <a href="/aerospace-engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">3</div>
                <h3>Aircraft Design</h3>
                <p>Learn the principles of designing modern aircraft and spacecraft.</p>
                <div class="card-meta">6 lessons • 5 hours</div>
                <a href="/aerospace-engineering/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
        </div>
    </section>

    <section class="tools-section">
        <h2>Tools You'll Master</h2>
        <div class="tools-grid">
            @foreach (var tool in Tools)
            {
                <div class="tool-badge">@tool</div>
            }
        </div>
    </section>

    <section class="requirements-section">
        <h2>What You'll Learn</h2>
        <div class="requirements-grid">
            <div class="requirement">
                <h4>✓ Aerodynamics</h4>
                <p>Lift, drag, and aerodynamic principles for aircraft design and performance.</p>
            </div>
            <div class="requirement">
                <h4>✓ Propulsion Systems</h4>
                <p>Jet engines, rockets, and propulsion theory for aerospace applications.</p>
            </div>
            <div class="requirement">
                <h4>✓ Flight Dynamics</h4>
                <p>Aircraft control, stability, and flight mechanics principles.</p>
            </div>
            <div class="requirement">
                <h4>✓ Structural Analysis</h4>
                <p>Materials, stress analysis, and structural design for aircraft.</p>
            </div>
            <div class="requirement">
                <h4>✓ Aircraft Systems</h4>
                <p>Avionics, hydraulics, electrical systems, and aircraft integration.</p>
            </div>
            <div class="requirement">
                <h4>✓ Design Projects</h4>
                <p>Apply theory to real-world aerospace design challenges and projects.</p>
            </div>
        </div>
    </section>

    <LessonsList @ref="lessonsComponent" />

    <QuizzesList @ref="quizzesComponent" />

    <section class="tools-section">
        <h2>Tools You'll Use</h2>
        <div class="tools-grid">
            @foreach (var tool in Tools)
            {
                <div class="tool-badge">@tool</div>
            }
        </div>
    </section>

    <section class="cta-section-internal">
        <h3>Ready to Start?</h3>
        <p>Enroll now and begin your aerospace engineering journey</p>
        <button class="btn btn-primary btn-lg">Enroll Now</button>
    </section>

    <section class="research-section">
        <h2>Research & Resources</h2>
        <div class="resources-grid">
            <div class="resource-item">
                <h3>Key Organizations</h3>
                <ul>
                    <li><a href="https://www.aiaa.org/" target="_blank">American Institute of Aeronautics and Astronautics (AIAA)</a></li>
                    <li>Leading professional society for aerospace engineers</li>
                    <li>Conferences, publications, and career networking</li>
                </ul>
            </div>
            <div class="resource-item">
                <h3>Research Areas</h3>
                <ul>
                    <li>Aerodynamics and fluid mechanics</li>
                    <li>Spacecraft design and propulsion systems</li>
                    <li>Materials science for aerospace applications</li>
                    <li>Control systems and avionics</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="applications-section">
        <h2>Real-World Applications</h2>
        <div class="applications-grid">
            <div class="application-card">
                <h3>Aircraft Design</h3>
                <p>Design and optimize commercial and military aircraft for efficiency, safety, and performance.</p>
            </div>
            <div class="application-card">
                <h3>Space Exploration</h3>
                <p>Develop spacecraft, satellites, and propulsion systems for missions beyond Earth orbit.</p>
            </div>
            <div class="application-card">
                <h3>Aerodynamic Optimization</h3>
                <p>Improve vehicle performance through computational fluid dynamics and wind tunnel testing.</p>
            </div>
            <div class="application-card">
                <h3>Propulsion Systems</h3>
                <p>Engineer jet engines, rockets, and alternative propulsion technologies.</p>
            </div>
            <div class="application-card">
                <h3>Structural Analysis</h3>
                <p>Design lightweight structures that withstand extreme flight conditions.</p>
            </div>
            <div class="application-card">
                <h3>Autonomous Vehicles</h3>
                <p>Develop drones and autonomous flight systems for various applications.</p>
            </div>
        </div>
    </section>
</div>

@code {
    private LessonsList? lessonsComponent;
    private QuizzesList? quizzesComponent;
    
    private List<string> Tools = new()
    {
        "MATLAB", "CATIA", "SolidWorks", "ANSYS", "CFX", "Simulink"
    };

    protected override void OnInitialized()
    {
        if (lessonsComponent != null)
        {
            lessonsComponent.Lessons = new()
            {
                new() { 
                    Title = "Introduction to Aerospace", 
                    Description = "Overview of aerospace engineering and its applications.",
                    Duration = "2 hours",
                    Link = "/lesson/ae-intro",
                    Topics = new() { "Fundamentals", "History", "Applications" }
                },
                new() { 
                    Title = "Aerodynamics", 
                    Description = "Learn the principles of aerodynamics and fluid dynamics.",
                    Duration = "4 hours",
                    Link = "/lesson/aerodynamics",
                    Topics = new() { "Aerodynamics", "Forces", "Lift & Drag" }
                }
            };
        }

        if (quizzesComponent != null)
        {
            quizzesComponent.Quizzes = new()
            {
                new() { 
                    Title = "Aerodynamics Quiz",
                    Description = "Test your aerodynamics knowledge",
                    Questions = 15,
                    TimeLimit = 25,
                    Link = "/quiz/aero-101"
                }
            };
        }
    }
}

