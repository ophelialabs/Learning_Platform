@page "/mathematics"

<PageTitle>Mathematics - Learning Platform</PageTitle>

<CourseHeader 
    CourseName="Mathematics"
    Description="Master essential and advanced mathematics including calculus, linear algebra, statistics, and discrete math."
    Duration="10 months"
    LessonCount="48"
    HasCertificate="true" />

<div class="learning-cta">
    <a href="/mathematics/learning" class="btn btn-primary btn-lg">
        <i class="bi bi-play-circle-fill"></i> Start Interactive Learning
    </a>
</div>

<div class="container">
    <section class="course-overview">
        <h2>Course Modules</h2>
        <div class="overview-grid">
            <div class="overview-card">
                <div class="card-number">1</div>
                <h3>Calculus</h3>
                <p>Limits, derivatives, integrals, and multivariable calculus.</p>
                <div class="card-meta">12 lessons • 9 hours</div>
                <a href="/mathematics/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">2</div>
                <h3>Linear Algebra</h3>
                <p>Matrices, vectors, eigenvalues, and applications.</p>
                <div class="card-meta">10 lessons • 8 hours</div>
                <a href="/mathematics/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">3</div>
                <h3>Statistics & Probability</h3>
                <p>Distributions, hypothesis testing, regression, and data analysis.</p>
                <div class="card-meta">11 lessons • 8.5 hours</div>
                <a href="/mathematics/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
        </div>
    </section>

    <section class="tools-section">
        <h2>Tools You'll Master</h2>
        <div class="tools-grid">
            @foreach (var tool in Tools)
            {
                <div class="tool-badge">@tool</div>
            }
        </div>
    </section>

    <section class="requirements-section">
        <h2>What You'll Learn</h2>
        <div class="requirements-grid">
            <div class="requirement">
                <h4>✓ Calculus</h4>
                <p>Limits, derivatives, integrals, and applications.</p>
            </div>
            <div class="requirement">
                <h4>✓ Linear Algebra</h4>
                <p>Vectors, matrices, systems of equations, and eigenvalues.</p>
            </div>
            <div class="requirement">
                <h4>✓ Statistics</h4>
                <p>Descriptive statistics, probability, and hypothesis testing.</p>
            </div>
            <div class="requirement">
                <h4>✓ Discrete Mathematics</h4>
                <p>Set theory, logic, combinatorics, and graph theory.</p>
            </div>
            <div class="requirement">
                <h4>✓ Differential Equations</h4>
                <p>Ordinary and partial differential equations with applications.</p>
            </div>
            <div class="requirement">
                <h4>✓ Problem Solving</h4>
                <p>Apply math to engineering and real-world problems.</p>
            </div>
        </div>
    </section>

    <section class="research-section">
        <h2>Research & Resources</h2>
        <div class="resources-grid">
            <div class="resource-item">
                <h3>Mathematical Societies</h3>
                <ul>
                    <li><a href="https://www.maa.org/" target="_blank">Mathematical Association of America (MAA)</a></li>
                    <li>Dedicated to advancing mathematics education and research</li>
                    <li>Access to publications and mathematical competitions</li>
                </ul>
            </div>
            <div class="resource-item">
                <h3>Research Fields</h3>
                <ul>
                    <li>Abstract algebra and number theory</li>
                    <li>Analysis and topology</li>
                    <li>Applied mathematics and optimization</li>
                    <li>Mathematical logic and set theory</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="applications-section">
        <h2>Real-World Applications</h2>
        <div class="applications-grid">
            <div class="application-card">
                <h3>Cryptography</h3>
                <p>Develop secure encryption algorithms using number theory and advanced mathematical principles.</p>
            </div>
            <div class="application-card">
                <h3>Machine Learning</h3>
                <p>Build AI systems using linear algebra, calculus, and statistical mathematics.</p>
            </div>
            <div class="application-card">
                <h3>Financial Modeling</h3>
                <p>Design mathematical models for portfolio optimization and risk assessment.</p>
            </div>
            <div class="application-card">
                <h3>Operations Research</h3>
                <p>Solve complex optimization problems in logistics, scheduling, and resource allocation.</p>
            </div>
            <div class="application-card">
                <h3>Engineering Simulations</h3>
                <p>Create computational models for structural analysis, fluid dynamics, and electromagnetic fields.</p>
            </div>
            <div class="application-card">
                <h3>Data Science</h3>
                <p>Apply statistics and mathematical analysis to extract insights from large datasets.</p>
            </div>
        </div>
    </section>
</div>

@code {
    private LessonsList? lessonsComponent;
    private QuizzesList? quizzesComponent;

    private List<string> Tools = new()
    {
        "MATLAB", "Python", "Mathematica", "Wolfram Alpha", "R", "NumPy"
    };

    protected override void OnInitialized() {
        if (lessonsComponent != null) lessonsComponent.Lessons = new() { new() { Title = "Math Fundamentals", Description = "Overview", Duration = "2 hours", Link = "/lesson/math-intro", Topics = new() { "Basics" } } };
        if (quizzesComponent != null) quizzesComponent.Quizzes = new() { new() { Title = "Math Quiz", Description = "Test", Questions = 15, TimeLimit = 25, Link = "/quiz/math-101" } };
    }
}

