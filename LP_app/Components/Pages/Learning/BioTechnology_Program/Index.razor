@page "/biotechnology"

<PageTitle>BioTechnology Program - Learning Platform</PageTitle>

<CourseHeader 
    CourseName="BioTechnology Program"
    Description="Explore the intersection of biology and technology. Master genetic engineering, bioprocessing, and bioinformatics."
    Duration="8 months"
    LessonCount="36"
    HasCertificate="true" />

<div class="learning-cta">
    <a href="/biotechnology/learning" class="btn btn-primary btn-lg">
        <i class="bi bi-play-circle-fill"></i> Start Interactive Learning
    </a>
</div>

<div class="container">
    <section class="course-overview">
        <h2>Course Modules</h2>
        <div class="overview-grid">
            <div class="overview-card">
                <div class="card-number">1</div>
                <h3>Molecular Biology</h3>
                <p>Master DNA, RNA, proteins, and molecular techniques fundamental to biotechnology.</p>
                <div class="card-meta">9 lessons • 7 hours</div>
                <a href="/biotechnology/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">2</div>
                <h3>Bioprocessing</h3>
                <p>Learn production techniques for biopharmaceuticals and industrial biotech products.</p>
                <div class="card-meta">8 lessons • 6.5 hours</div>
                <a href="/biotechnology/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">3</div>
                <h3>Bioinformatics</h3>
                <p>Analyze biological data using computational tools and programming.</p>
                <div class="card-meta">7 lessons • 5.5 hours</div>
                <a href="/biotechnology/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
        </div>
    </section>

    <section class="tools-section">
        <h2>Tools You'll Master</h2>
        <div class="tools-grid">
            @foreach (var tool in Tools)
            {
                <div class="tool-badge">@tool</div>
            }
        </div>
    </section>

    <section class="requirements-section">
        <h2>What You'll Learn</h2>
        <div class="requirements-grid">
            <div class="requirement">
                <h4>✓ Molecular Biology</h4>
                <p>DNA, RNA, proteins, and molecular techniques in biotechnology.</p>
            </div>
            <div class="requirement">
                <h4>✓ Genetic Engineering</h4>
                <p>CRISPR, gene editing, cloning, and genetic modification.</p>
            </div>
            <div class="requirement">
                <h4>✓ Bioprocessing</h4>
                <p>Fermentation, purification, and scale-up production.</p>
            </div>
            <div class="requirement">
                <h4>✓ Bioinformatics</h4>
                <p>Sequence analysis, genomics, and computational biology.</p>
            </div>
            <div class="requirement">
                <h4>✓ Regulatory Affairs</h4>
                <p>FDA regulations, quality control, and compliance.</p>
            </div>
            <div class="requirement">
                <h4>✓ Capstone Project</h4>
                <p>Design a biotech process from research to production.</p>
            </div>
        </div>
    </section>

    <section class="research-section">
        <h2>Research & Resources</h2>
        <div class="resources-grid">
            <div class="resource-item">
                <h3>Key Organizations</h3>
                <ul>
                    <li><a href="https://www.biotechcircle.com/" target="_blank">Biotech Circle</a></li>
                    <li>Network and platform for biotechnology professionals</li>
                    <li>Career opportunities and industry insights</li>
                </ul>
            </div>
            <div class="resource-item">
                <h3>Research Areas</h3>
                <ul>
                    <li>Genetic engineering and CRISPR technology</li>
                    <li>Protein expression and purification</li>
                    <li>Synthetic biology and metabolic engineering</li>
                    <li>Biopharmaceuticals and vaccine development</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="applications-section">
        <h2>Real-World Applications</h2>
        <div class="applications-grid">
            <div class="application-card">
                <h3>Biopharmaceuticals</h3>
                <p>Develop therapeutic proteins and monoclonal antibodies for disease treatment.</p>
            </div>
            <div class="application-card">
                <h3>Gene Therapy</h3>
                <p>Engineer genetic treatments for inherited and acquired diseases using CRISPR and other tools.</p>
            </div>
            <div class="application-card">
                <h3>Agricultural Biotechnology</h3>
                <p>Create genetically modified crops with improved yield and disease resistance.</p>
            </div>
            <div class="application-card">
                <h3>Industrial Biotechnology</h3>
                <p>Produce chemicals, fuels, and materials using engineered microorganisms.</p>
            </div>
            <div class="application-card">
                <h3>Diagnostics</h3>
                <p>Develop biomarker tests and rapid diagnostic assays for diseases.</p>
            </div>
            <div class="application-card">
                <h3>Vaccine Development</h3>
                <p>Engineer vaccines using recombinant DNA and novel delivery mechanisms.</p>
            </div>
        </div>
    </section>
</div>

@code {
    private LessonsList? lessonsComponent;
    private QuizzesList? quizzesComponent;

    private List<string> Tools = new()
    {
        "Bioinformatics Tools", "BLAST", "Python", "R", "MATLAB", "ImageJ"
    };

    protected override void OnInitialized() {
        if (lessonsComponent != null) lessonsComponent.Lessons = new() { new() { Title = "Intro to Biotechnology", Description = "Overview", Duration = "2 hours", Link = "/lesson/biotech-intro", Topics = new() { "Fundamentals" } } };
        if (quizzesComponent != null) quizzesComponent.Quizzes = new() { new() { Title = "Biotech Basics", Description = "Test", Questions = 15, TimeLimit = 25, Link = "/quiz/biotech-101" } };
    }
}

