    id, name, city, department, salary,
    Rank() OVER (
        PARTITION BY department
        ORDER BY salary DESC
    ) AS dept_rank,
    Rank() OVER (
        PARTITION BY city
        ORDER BY salary DESC
    ) AS city_rank
    From employees
)Select
