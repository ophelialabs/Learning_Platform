@page "/textiles"

<PageTitle>Textiles & Materials - Learning Platform</PageTitle>

<CourseHeader 
    CourseName="Textiles & Materials"
    Description="Master textile science, fiber properties, fabric production, and advanced textile technologies."
    Duration="5 months"
    LessonCount="24"
    HasCertificate="true" />

<div class="learning-cta">
    <a href="/textiles/learning" class="btn btn-primary btn-lg">
        <i class="bi bi-play-circle-fill"></i> Start Interactive Learning
    </a>
</div>

<div class="container">
    <section class="course-overview">
        <h2>Course Modules</h2>
        <div class="overview-grid">
            <div class="overview-card">
                <div class="card-number">1</div>
                <h3>Fiber Science</h3>
                <p>Natural and synthetic fibers, properties, and characteristics.</p>
                <div class="card-meta">6 lessons • 4.5 hours</div>
                <a href="/textiles/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">2</div>
                <h3>Fabric Production</h3>
                <p>Spinning, weaving, knitting, and other fabric manufacturing processes.</p>
                <div class="card-meta">7 lessons • 5.5 hours</div>
                <a href="/textiles/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
            <div class="overview-card">
                <div class="card-number">3</div>
                <h3>Advanced Textiles</h3>
                <p>Smart textiles, sustainable textiles, and technical applications.</p>
                <div class="card-meta">6 lessons • 5 hours</div>
                <a href="/textiles/learning" class="btn btn-sm btn-primary">Start Module</a>
            </div>
        </div>
    </section>

    <section class="tools-section">
        <h2>Tools You'll Master</h2>
        <div class="tools-grid">
            @foreach (var tool in Tools)
            {
                <div class="tool-badge">@tool</div>
            }
        </div>
    </section>

    <section class="requirements-section">
        <h2>What You'll Learn</h2>
        <div class="requirements-grid">
            <div class="requirement">
                <h4>✓ Fiber Science</h4>
                <p>Classification, structure, and properties of natural and synthetic fibers.</p>
            </div>
            <div class="requirement">
                <h4>✓ Yarn Production</h4>
                <p>Spinning technologies, yarn twist, and properties.</p>
            </div>
            <div class="requirement">
                <h4>✓ Weaving & Knitting</h4>
                <p>Fabric construction methods, patterns, and design.</p>
            </div>
            <div class="requirement">
                <h4>✓ Fabric Finishing</h4>
                <p>Dyeing, printing, and finishing processes.</p>
            </div>
            <div class="requirement">
                <h4>✓ Sustainability</h4>
                <p>Eco-friendly textiles and sustainable manufacturing.</p>
            </div>
            <div class="requirement">
                <h4>✓ Technical Textiles</h4>
                <p>Smart textiles, performance fabrics, and innovations.</p>
            </div>
        </div>
    </section>

    <section class="research-section">
        <h2>Research & Resources</h2>
        <div class="resources-grid">
            <div class="resource-item">
                <h3>Professional Organizations</h3>
                <ul>
                    <li><a href="https://www.aatcc.org/" target="_blank">American Association of Textile Chemists and Colorists (AATCC)</a></li>
                    <li>Standards and best practices for textile technology</li>
                    <li>Testing methods and technical resources</li>
                </ul>
            </div>
            <div class="resource-item">
                <h3>Research Areas</h3>
                <ul>
                    <li>Fiber science and polymer chemistry</li>
                    <li>Textile dyeing and finishing</li>
                    <li>Sustainable and smart textiles</li>
                    <li>Quality control and testing</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="applications-section">
        <h2>Real-World Applications</h2>
        <div class="applications-grid">
            <div class="application-card">
                <h3>Fashion & Apparel</h3>
                <p>Design and produce textiles for clothing, considering aesthetics, comfort, and durability.</p>
            </div>
            <div class="application-card">
                <h3>Technical Textiles</h3>
                <p>Develop specialized fabrics for automotive, medical, and industrial applications.</p>
            </div>
            <div class="application-card">
                <h3>Smart Textiles</h3>
                <p>Create textiles with embedded sensors and electronic functionality for wearables.</p>
            </div>
            <div class="application-card">
                <h3>Sustainability</h3>
                <p>Develop eco-friendly materials and processes for sustainable fashion production.</p>
            </div>
            <div class="application-card">
                <h3>Quality Assurance</h3>
                <p>Test and ensure textiles meet industry standards for performance and safety.</p>
            </div>
            <div class="application-card">
                <h3>Process Optimization</h3>
                <p>Improve manufacturing efficiency through automation and process control technologies.</p>
            </div>
        </div>
    </section>
</div>

@code {
    private LessonsList? lessonsComponent;
    private QuizzesList? quizzesComponent;

    private List<string> Tools = new()
    {
        "Textile CAD", "Weaving Sims", "Testing Equipment", "MATLAB", "Design Software", "Lab Tools"
    };

    protected override void OnInitialized() {
        if (lessonsComponent != null) lessonsComponent.Lessons = new() { new() { Title = "Textiles Basics", Description = "Overview", Duration = "2 hours", Link = "/lesson/textiles-intro", Topics = new() { "Fibers" } } };
        if (quizzesComponent != null) quizzesComponent.Quizzes = new() { new() { Title = "Textiles Quiz", Description = "Test", Questions = 15, TimeLimit = 25, Link = "/quiz/textiles-101" } };
    }
}

