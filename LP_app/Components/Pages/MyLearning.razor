@page "/my-learning"

<PageTitle>My Learning - Learning Platform</PageTitle>

<div class="my-learning-header">
    <div class="container">
        <h1>My Learning Dashboard</h1>
        <p>Track your progress and continue your learning journey</p>
    </div>
</div>

<div class="container">
    <div class="dashboard-grid">
        <aside class="sidebar">
            <div class="sidebar-card">
                <h4>Learning Stats</h4>
                <div class="stat-item">
                    <span class="stat-label">Courses Enrolled</span>
                    <span class="stat-value">3</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Lessons Completed</span>
                    <span class="stat-value">24</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Total Learning Hours</span>
                    <span class="stat-value">48</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Certificates Earned</span>
                    <span class="stat-value">1</span>
                </div>
            </div>

            <div class="sidebar-card">
                <h4>Quick Actions</h4>
                <a href="/browse-courses" class="btn btn-sm btn-primary btn-block">Browse Courses</a>
                <a href="/profile" class="btn btn-sm btn-outline-primary btn-block">Edit Profile</a>
                <a href="/certificates" class="btn btn-sm btn-outline-primary btn-block">My Certificates</a>
            </div>
        </aside>

        <main class="main-content">
            <section class="learning-section">
                <h2>In Progress</h2>
                <div class="courses-list">
                    <div class="course-progress-card">
                        <div class="course-info">
                            <h3>Professional Certificate in Data Science & AI</h3>
                            <p class="course-instructor">Purdue University Online</p>
                        </div>
                        <div class="progress-item">
